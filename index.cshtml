
@model IEnumerable<apis.Models.Fruit>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List Of Fruits</h2>
            </div>
        </div>
        @if(Model.Count() >0)
        {
            <table class="table table-bordered table-striped" style="width=100%">
        <thead>
         <tr>
                <th width="40%"></th>
                <th width="40%">ID</th>
                <th width="40%">Fruits Item</th>
            </tr>
            </thead>
            <tbody>
        @foreach (var item in Model)
        {
           
            <tr>
                <td width="30%"></td>
                <td width="30%">@item.Id</td>
                <td width="30%">@item.Name</td>
            </tr>
            
        }
        </tbody>
        </table>
        }
    </div>